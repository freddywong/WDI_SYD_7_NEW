<%= form_for @post do |f| %>
<div class="form-group">	
	<%= f.label :title %>
	<%= f.text_field :title %>
</div>
<div class="form-group">	
	<%= f.label :content %>
	<%= f.text_field :content %>
</div>
<div class="form-group">	
	<%= f.label :author %>
	<%= f.text_field :author %>
</div>
<%= f.submit %>
<% end %>

