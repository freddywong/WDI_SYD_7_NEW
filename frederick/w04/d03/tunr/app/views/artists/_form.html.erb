<% unless @artist.errors.empty? %>
<ul id='errors'>
<% @artist.errors.full_messages.each do |error| %>
<li><%= error %></li>
<% end %>
</ul>
<% end %>

<%= form_for @artist do |f| %>
<div class="form-group">
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
</div>
<div class="form-group">
	<p>
		<%= f.label :hometown %><br>
		<%= f.text_field :hometown %>
	</p>
</div>
<div class="form-group">
	<p>
		<%= f.label :bio %><br>
		<%= f.text_field :bio %>
	</p>
</div>
<div class="form-group">
	<p>
		<%= f.label :years_active %><br>
		<%= f.text_field :years_active %>
	</p>
</div>
<div class="form-group">
	<p>
		<%= f.label :label %><br>
		<%= f.text_field :label %>
	</p>
</div>
<div class="form-group">
	<%= f.submit %>
</div>

<% end %>